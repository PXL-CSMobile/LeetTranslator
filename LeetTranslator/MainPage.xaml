<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeetTranslator.MainPage"
             Title="Leet Translator">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Spacing="20" Padding="20">
            <Entry x:Name="inputEntry" Placeholder="Vul hier een tekst in.." FontSize="18"/>
            <Slider Minimum="0" Maximum="100" x:Name="degreeSlider" ValueChanged="OnDegreeSliderChanged"/>
            <Label x:Name="degreeLabel" HorizontalTextAlignment="Center" FontSize="18"/>
            <Button Text="Vertaal" Clicked="OnTranslateClicked" FontSize="18"/>
            <Label x:Name="outputLabel" BackgroundColor="LightGray" Padding="10" FontSize="18"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

    